\BLOCK{ for job in experience }
\noindent
\BLOCK{ if not graphics }
    % --- RENDER WITHOUT LOGO COLUMN ---
    \hspace*{-2pt}\begin{tabular}[t]{ @{} l @{} }
        {\large\textbf{ \VAR{ job.position|trim } }}$\cdot$
        \textbf{ \VAR{ job.company|trim } } $\cdot$ \VAR{ job.employment_type } \\
        \jobdetail{
            \BLOCK{ if job.start_date.month }
                \VAR{ job.start_date.month } \VAR{ job.start_date.year } -- \BLOCK{ if job.current }Present\BLOCK{ else }\VAR{ job.end_date.month } \VAR{ job.end_date.year }\BLOCK{ endif }
            \BLOCK{ else }
                \VAR{ job.duration }
            \BLOCK{ endif }
            \BLOCK{ if job.duration_label } $\cdot$ \VAR{ job.duration_label }\BLOCK{ endif }
        },
        \jobdetail{ \VAR{ job.location|trim } $\cdot$ \VAR{ job.location_type|trim } }
    \end{tabular}
\BLOCK{ else }
    % --- RENDER WITH LOGO COLUMN ---
    \begin{tabular}{ @{} p{1.5cm} @{} p{\dimexpr\linewidth-1.5cm\relax} @{} }
        % COLUMN 1: LOGO
        \raisebox{\dimexpr-\height+\baselineskip}{
            \includegraphics[width=1.2cm,height=1.2cm,keepaspectratio]{ \VAR{ job.logo } }
        }
        &
        % COLUMN 2: DETAILS
        \begin{tabular}[t]{ @{} l @{} }
            {\large\textbf{ \VAR{ job.position|trim } }}$\cdot$
            \textbf{ \VAR{ job.company|trim } }$\cdot$ \VAR{ job.employment_type } \\
            \jobdetail{
                \BLOCK{ if job.start_date.month }
                    \VAR{ job.start_date.month } \VAR{ job.start_date.year } -- \BLOCK{ if job.current }Present\BLOCK{ else }\VAR{ job.end_date.month } \VAR{ job.end_date.year }\BLOCK{ endif }
                \BLOCK{ else }
                    \VAR{ job.duration }
                \BLOCK{ endif }
                \BLOCK{ if job.duration_label } $\cdot$ \VAR{ job.duration_label }\BLOCK{ endif }
            },
            \jobdetail{ \VAR{ job.location|trim } $\cdot$ \VAR{ job.location_type|trim } }
        \end{tabular}
    \end{tabular}
\BLOCK{ endif }
\vspace{6pt}

\BLOCK{ if job.description }
\noindent \VAR{ job.description|trim }
\vspace{4pt}
\BLOCK{ endif }

\BLOCK{ if job.achievements }
\noindent\textbf{Key Achievement\BLOCK{ if job.achievements|length > 1 }s\BLOCK{ endif }:}
\begin{itemize}[leftmargin=1.5em, nosep, topsep=2pt]
    \BLOCK{ for bullet in job.achievements }
    \item \VAR{ bullet }
    \BLOCK{ endfor }
\end{itemize}
\vspace{4pt}
\BLOCK{ endif }

\BLOCK{ if job.responsibilities }
\noindent\textbf{Responsibilities:}
\begin{itemize}[leftmargin=1.5em, nosep, topsep=2pt]
    \BLOCK{ for resp in job.responsibilities }
    \item \VAR{ resp }
    \BLOCK{ endfor }
\end{itemize}
\vspace{4pt}
\BLOCK{ endif }

\BLOCK{ if job.skills }
\noindent\textbf{Skills:} \VAR{ job.skills | join(' $\cdot$ ') }
\vspace{10pt}
\BLOCK{ endif }

\vspace{12pt} % Separation between job entries
\BLOCK{ endfor }